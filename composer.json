{
  "name": "wpdiggerstudio/wpzylos-requirements",
  "description": "Environment and dependency validation for WPZylos framework plugins",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "wordpress",
    "wpzylos",
    "requirements",
    "validation",
    "environment",
    "dependencies"
  ],
  "homepage": "https://github.com/WPDiggerStudio/wpzylos-requirements",
  "authors": [
    {
      "name": "WPDiggerStudio",
      "email": "diggerwp@gmail.com",
      "homepage": "https://github.com/WPDiggerStudio",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/WPDiggerStudio/wpzylos-requirements/issues",
    "source": "https://github.com/WPDiggerStudio/wpzylos-requirements",
    "docs": "https://wpzylos.com/docs/latest/packages/wpzylos-requirements"
  },
  "require": {
    "php": "^8.0",
    "wpdiggerstudio/wpzylos-core": "^1.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^9.6 || ^10.0",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "WPZylos\\Framework\\Requirements\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WPZylos\\Framework\\Requirements\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "analyze": "phpstan analyze",
    "cs": "phpcs --standard=PSR12 src",
    "cs-fix": "phpcbf --standard=PSR12 src",
    "qa": [
      "@cs",
      "@analyze",
      "@test"
    ],
    "publish-config": "php -r \"copy('stubs/requirements.php.stub', getcwd() . '/config/requirements.php');\"",
    "post-publish-config": "@php -r \"echo 'Published: config/requirements.php' . PHP_EOL;\""
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "8.0.2"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "funding": [
    {
      "type": "paypal",
      "url": "https://www.paypal.com/donate/?hosted_button_id=66U4L3HG4TLCC"
    }
  ]
}
